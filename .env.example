# ===========================================
# Shopify 应用配置 (必需)
# ===========================================
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here

# 应用URL (必需 - 改为你的实际域名或IP)
SHOPIFY_APP_URL=https://your-domain.com

# API权限范围 (必需)
SCOPES=read_content,read_files,read_locales,read_online_store_pages,read_products,read_themes,read_translations,write_content,write_files,write_locales,write_products,write_themes,write_translations,write_online_store_pages

# ===========================================
# 数据库配置 (必需)
# ===========================================
# 开发环境使用SQLite
DATABASE_URL=file:./dev.db

# 生产环境使用PostgreSQL (取消注释并配置)
# DATABASE_URL=postgresql://username:password@host:port/database

# ===========================================
# AI翻译服务配置 (必需)
# ===========================================
# 使用第三方中转API (如 vveai.com)
OPENAI_API_KEY=sk-your_api_key_here
OPENAI_BASE_URL=https://us.vveai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# GPT翻译API配置 (应用使用这个变量名)
GPT_API_KEY=sk-your_api_key_here
GPT_API_URL=https://us.vveai.com/v1
GPT_MODEL=gpt-4o-mini

# ===========================================
# 日志配置 (可选)
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=logs

# ===========================================
# Redis缓存配置 (推荐配置以提升性能)
# ===========================================
# 启用Redis缓存获得60-80%性能提升
REDIS_ENABLED=true

# Redis连接配置
# 本地Redis: redis://localhost:6379
# Redis Cloud: redis://default:password@host:port
REDIS_URL=redis://localhost:6379

# ===========================================
# 品牌保护配置 (可选但推荐)
# ===========================================
# 启用品牌名保护功能 (默认启用)
ENABLE_BRAND_PROTECTION=true

# 自定义品牌列表 (逗号分隔，例如: MyBrand,ProductLine,SeriesName)
# 这些品牌名在翻译时会被保护，不会被翻译
CUSTOM_BRANDS=YourBrand1,YourBrand2

# 智能品牌识别 (自动识别可能的品牌名)
SMART_BRAND_DETECTION=true

# 保护产品型号和SKU
PROTECT_PRODUCT_MODELS=true
PROTECT_SKU=true

# 保护材料和技术术语
PROTECT_MATERIALS=true

# ===========================================
# Webhook自动翻译配置 (可选)
# ===========================================
# 启用Webhook自动翻译功能
WEBHOOK_AUTO_TRANSLATE_ENABLED=true

# 自动翻译延迟（毫秒）- 避免频繁更新触发多次翻译
WEBHOOK_TRANSLATE_DELAY=5000

# 批量处理阈值 - 超过此数量的更新会批量处理
WEBHOOK_BATCH_THRESHOLD=10

# 重复事件去重时间窗口（秒）
WEBHOOK_DEDUP_WINDOW=60

# Webhook事件保留天数
WEBHOOK_EVENT_RETENTION_DAYS=30

# 自动翻译优先级设置
WEBHOOK_PRODUCT_PRIORITY=HIGH      # 产品优先级: HIGH/NORMAL/LOW
WEBHOOK_COLLECTION_PRIORITY=HIGH   # 集合优先级
WEBHOOK_PAGE_PRIORITY=NORMAL       # 页面优先级
WEBHOOK_ARTICLE_PRIORITY=NORMAL    # 文章优先级
WEBHOOK_THEME_PRIORITY=LOW         # 主题优先级

# 通知设置 - 当自动翻译失败时发送通知
WEBHOOK_ERROR_NOTIFICATION=true

# ===========================================
# 环境设置
# ===========================================
NODE_ENV=production