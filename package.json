{
  "name": "lightsler-ai",
  "private": true,
  "scripts": {
    "build": "remix vite:build",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "dev": "shopify app dev",
    "config:link": "shopify app config link",
